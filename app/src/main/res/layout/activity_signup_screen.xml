<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg_login_signup"
    tools:context=".Info_screen">


    <ScrollView
        android:id="@+id/sv_"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        tools:ignore="RtlCompat">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="250dp"


                android:layout_alignParentStart="true"

                android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/editText_Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"


                android:layout_below="@+id/img_bg"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/edittext_border"

                android:ellipsize="start"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/first_name"
                android:inputType="textEmailAddress"
                android:textColorHint="#BDBDBD" />

            <EditText
                android:id="@+id/editText_last_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editText_Email"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:textColorHint="#BDBDBD" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editText_last_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="EMAIL"
                android:inputType="textEmailAddress"
                android:textColorHint="#BDBDBD" />

            <EditText
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editText_email"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textColorHint="#BDBDBD" />

            <Button
                android:id="@+id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_password"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_signup_round_corner"
                android:text="@string/signup_"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView_alrdacnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_signup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/already_have_an_account"
                android:textColor="#404040" />

            <TextView
                android:id="@+id/textView_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_alrdacnt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="LOGIN"
                android:textColor="#006098" />

        </RelativeLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/_header_tittle"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@drawable/header_text" />


</RelativeLayout>