<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_screen">


    <RelativeLayout
        android:id="@+id/RLV_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:background="@android:color/white"
        tools:ignore="RtlCompat">

        <ImageView
            android:id="@+id/img_setting2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            app:srcCompat="@drawable/setting_icon"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/_header_tittle"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/header_text" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/Scrol_view"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rlv_Container"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <RelativeLayout
                android:id="@+id/rlv_trans_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/newbg">

                <RelativeLayout
                    android:id="@+id/rlv_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_below="@+id/rlv_ellipse_holder"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@android:color/white">

                    <ImageView
                        android:id="@+id/imageView_Plus"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imageView_offer"

                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="38dp"
                        app:srcCompat="@drawable/plus"
                        tools:ignore="RtlCompat" />

                    <ListView
                        android:id="@+id/List_my_offer"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@+id/imageView_offer"
                        android:layout_marginTop="10dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imageView_offer"
                        android:layout_width="240dp"
                        android:layout_height="24dp"


                        android:layout_marginLeft="-15dp"

                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/my_active_offr"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlv_ellipse_holder"
                    android:layout_width="250dp"
                    android:layout_height="250dp"


                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp">

                    <RelativeLayout
                        android:id="@+id/rlv_small_circle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="15dp"
                        tools:ignore="RtlCompat">

                        <RelativeLayout
                            android:id="@+id/imageView_offr"
                            android:layout_width="190dp"
                            android:layout_height="190dp"

                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/circle_xml">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="75dp"
                                android:layout_height="75dp"


                                android:layout_centerHorizontal="true"


                                android:layout_marginTop="35dp"
                                app:srcCompat="@drawable/new_cart_" />

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView2"

                                android:layout_centerHorizontal="true"
                                android:text="TAP TO FIND\n     OFFERS"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </RelativeLayout>


                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>